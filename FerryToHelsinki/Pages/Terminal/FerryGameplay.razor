@layout FerryToHelsinki.Shared.Layouts.Terminal
@using FerryToHelsinki.Shared.BaseComponents;
@inherits TerminalStateComponent;


@if (ShouldRenderForTerminalState)
{
    <div id="ferry-started">
        <div id="left-sidebar">
            <img id="sidebar" src="img/sidebanner.png" alt="left-sidebar">
        </div>
        <div id="ferry-gameplay">
            <div id="ferry-timeline-div">
                <pre id="ferry-timeline">@_startingFerryTerminalFrame</pre>
            </div>
            <div id="dramatic-countdown-div" />
            <div id="gameplay">
                <TerminalMessage CurrentTerminalState="Enums.TerminalStates.FerryToHelsinkiGameplay"
                                 ExpectedTerminalState="Enums.TerminalStates.FerryToHelsinkiGameplay"
                                 OnTerminalStateChanged="@UpdateTerminalState" />
                <br>
                <span id="first-message">@FirstMessage</span>
                <span id="bold-message"><b>IN AN OFFICE IN TALLINN, ESTONIA</b></span>
                <br>
                <span id="welcome-message">Welcome to THE FERRY TO HELSINKI</span>
            </div>
        </div>
        <div id="right-sidebar">
            <img id="sidebar" src="img/sidebanner.png" alt="right-sidebar">
        </div>
    </div>
}

